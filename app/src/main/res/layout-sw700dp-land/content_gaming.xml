<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.tomiz.guessinggame_shiyu.SettingsActivityFragment"
        android:id="@+id/settingsActivityFragment"
        android:layout_weight="1"/>

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.tomiz.guessinggame_shiyu.GamingActivityFragment"
        android:id="@+id/quizFragment"
        android:layout_weight="2"
        tools:layout="@layout/fragment_gaming"/>

</android.support.constraint.LinearLayout>